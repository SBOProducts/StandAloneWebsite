@model Customer.ViewModels.ProductVM
@using Customer.Helpers

@{
    ViewBag.Title = "Create";
}

<h2>Add Product</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.CategoryID)
        @Html.HiddenFor(model => model.Tags)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        
        <div class="editor-label">
            <label for="">Images</label>
        </div>
        <div>
            @Html.Partial("~/Views/Content/ImageManagerPanel.cshtml", new Customer.Models.ImageUploadModel() { ImageFolder= new Guid(Request["imgkey"]), ImageSettings = "ProductImages" })
        </div>
        <br />
        <h3><img src="@Url.Content("~/Content/Images/YouTube.png")" style="height:32px; margin-right:10px; margin-bottom:-5px;" alt="YouTube Videos" />Add Videos</h3>
        <p style="font-size:0.9em;">To make up to 3 YouTube videos appear below this product simply paste links from www.YouTube.com into to the boxes below. <em>An Example link would be http://www.youtube.com/watch?v=nkLrHZ5z-RI</em></p>
        <div>
            @Html.TextBoxFor(m => m.Video1, new { placeholder = "YouTube Video Embed Code" })
            @Html.ValidationMessageFor(m => m.Video1)<br />

            @Html.TextBoxFor(m => m.Video2, new { placeholder = "YouTube Video Embed Code" })
            @Html.ValidationMessageFor(m => m.Video2)<br />

            @Html.TextBoxFor(m => m.Video3, new { placeholder = "YouTube Video Embed Code" })
            @Html.ValidationMessageFor(m => m.Video3)<br />
            
        </div>
    
        <p>
            <input class="button" type="submit" value="Create" />
            @Html.ActionButton("Cancel", "Details", "Category", new { ID = Model.CategoryID }, new { @class = "button" })
        </p>
}


